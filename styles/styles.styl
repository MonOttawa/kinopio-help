// temp code for prototyping index.md badges
ul
  padding 0
  li
    list-style none
    margin-bottom 12px
    a
      color var(--primary)
      text-decoration none
      background cyan
      padding 4px 5px
      border-radius 3px
      &:hover
        filter hue-rotate(45deg)


header
  margin-bottom 2rem
  a
    color var(--primary)
    text-decoration none
    &:hover
      text-decoration underline

nav.search
  display flex
  img
    width 18px
    padding-right 4px
    cursor text
    margin-top 1px

.email
  height 70px
  width auto
  margin-right 16px

.froggo
  margin-top 1rem
  margin-bottom 2rem
  max-width 75px

canvas#background
  position: fixed;
  background-color #dbdbdb
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: -1;
