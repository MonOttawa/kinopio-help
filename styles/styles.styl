@font-face
  font-family 'OsakaMono-Kinopio'
  src url("/assets/OsakaMono-Kinopio.woff2") format("woff2")
  font-weight normal
  font-style normal

*
  -webkit-overflow-scrolling touch
  -webkit-tap-highlight-color transparent
  box-sizing border-box
  // font-family "OsakaMono-Kinopio", monospace

body
  margin 20px
  color var(--primary)
  // background-color var(--secondary-background)
  font-family var(--sans-serif)
  // min-width 320px
  // max-width 100%

.logo
  width 50px
  vertical-align -13px
  margin-right 12px

h1
  font-size 20px
h2
  font-size 16px
// h3
//   font-size 16px
//   font-weight normal
//   font-style italic
p
  max-width 520px
a
  color blue
  &:hover
    text-decoration none
input
  font-size 16px
  font-family var(--sans-serif)
  background-color transparent
  border none
  border-radius 0
  border-bottom 1px solid black
img
  width 100%
  max-width 600px
video
  width 100%
  max-width 420px
blockquote
  margin 0
  background var(--info-background)
  border-radius 3px
  padding 8px
  max-width 520px
  display inline-block
  p
    margin 0

// .row
