:root
  // theme vars
  --primary black
  // --primary-background white

  // --secondary #818181
  // --secondary-background #e3e3e3
  --secondary-hover-background #d8d8d8
  --secondary-active-background #cdcdcd

  // --light-shadow rgba(0,0,0,0.20)
  --heavy-shadow rgba(0,0,0,0.25)

  // --danger-background #ffb8b3
  // --danger-hover-background #ffa49e
  // --danger-active-background #ff928b

  --info-background #90ffff
  --success-background #98f49f

  // non-theme vars
  // --max-z 2147483647
  // --hover-shadow 3px 3px 0 var(--heavy-shadow)
  // --active-shadow 5px 5px 0 var(--light-shadow)
  // --active-inset-shadow inset 0 2px 3px var(--light-shadow)
  --button-hover-shadow 2px 2px 0 var(--heavy-shadow)
  --button-active-inset-shadow inset 0 1px 2px var(--heavy-shadow)

  // help site vars
  --sans-serif Helvetica Neue, Helvetica, Arial, sans-serif
  --max-page-width 520px
  --page-margin 20px

@font-face
  font-family 'OsakaMono-Kinopio'
  src url("/assets/OsakaMono-Kinopio.woff2") format("woff2")
  font-weight normal
  font-style normal

*
  -webkit-overflow-scrolling touch
  -webkit-tap-highlight-color transparent
  box-sizing border-box
  // font-family "OsakaMono-Kinopio", monospace

body
  margin var(--page-margin)
  color var(--primary)
  font-family var(--sans-serif)

.logo
  background-image url('/assets/logo-base.png')
  background-size contain
  background-repeat no-repeat
  width 50px
  height 42px
  vertical-align -13px
  margin-right 12px
  display inline-block

header
  h1
    margin-top 0
    padding-top 0.67em // h1 default margin
  a
    color var(--primary)
    text-decoration none
    &:hover,
    &:focus
      text-decoration underline
      .logo
        background-image url('/assets/logo-hover.png')
    &:active
      .logo
        background-image url('/assets/logo-active.png')


nav
  display flex
  margin-bottom 2rem
  img
    width 18px
    padding-right 4px
    cursor text
    margin-top 1px

footer
  margin-top 2rem
  margin-bottom 2rem

// button
//   cursor pointer
  // take from app

.hidden
  display none

h1
  font-size 20px
h2
  font-size 16px
// h3
//   font-size 16px
//   font-weight normal
//   font-style italic
p
  max-width var(--max-page-width)
a
  color blue
  &:hover
    text-decoration none
input
  font-size 16px
  font-family var(--sans-serif)
  background-color transparent
  border none
  border-radius 0
  border-bottom 1px solid black
img
  width 100%
  max-width 600px
video
  width 100%
  max-width var(--max-page-width)
blockquote
  margin 0
  background pink
  border-radius 3px
  padding 8px
  max-width var(--max-page-width)
  display inline-block
  p
    margin 0

// .row
//   display flex
//   align-items center
//   max-width var(--max-page-width)

ul
  padding 0
  li
    list-style none
    margin-bottom 12px
    a
      color var(--primary)
      text-decoration none
      background var(--info-background)
      padding 4px 5px
      border-radius 3px
      &:hover,
      &:focus
        box-shadow var(--button-hover-shadow)
      &:active
        box-shadow var(--button-active-inset-shadow)

      // &:hover
      //   box-shadow var(--button-hover-shadow)

.froggo
  max-width 75px

canvas#background
  position: fixed
  background-color #dbdbdb
  height 100%
  width 100%
  top 0
  left 0
  z-index -1

button
  touch-action manipulation
  text-align left
  padding 7px
  padding-top 4px
  padding-bottom 4px
  margin 0
  border 1px solid var(--primary)
  background-color transparent
  border-radius 3px
  cursor pointer
  user-select none
  font-size 14px
  font-family var(--sans-serif)
  &:hover,
  &:focus
    box-shadow var(--button-hover-shadow)
    background var(--secondary-hover-background)
  &:active
    color var(--primary)
    box-shadow var(--button-active-inset-shadow)
    background var(--secondary-active-background)

button.kinopio
  position absolute
  right var(--page-margin)
  top var(--page-margin)

code
  // color tomato
  background var(--success-background)
  // background white
  color black
  padding 2px
  padding-left 6px
  padding-right 6px
  border-radius 3px
  font-family "OsakaMono-Kinopio", monospace

article
  ul
    max-width var(--max-page-width)
    padding-left 1rem
    margin-left 5px
    li
      list-style-type disc
